                          </div>


                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card shadow m-4">
                            <img src="public/assets/images/kucing.webp" class="card-img" alt="image">
                            <div class="card-body text-center rounded-3">
                                <h5 class="nameCard fw-bold">MUHAMAD SUBKHAN</h5>
                                <P class="fieldName fw-bold text-muted">Fullstack Developer</P>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    
    <section class="card-detail bg-light py-5">
        <div class="container py-5">
                <h2 class="header-title text-center fw-bold py-4 mb-5 ">MY PROJECT</h2>
            <div class="row d-flex justify-content-evenly cardFlex">
                
                <!-- CARD DYNAMIC -->
                {{#each dataProject}}
                <div class="cardPost col-sm-3 mt-3 mx-3">
                    <div class="card-detail bg-body rounded-3 shadow px-3 py-3 mb-3">
                        <img src="./uploads/{{this.image}}" class="card-img-top shadow rounded-3" alt="_blank">
                        <div class="card-bodyDt mt-3">
                            <a href="/detail-project/{{this.id}}" class="card-dt text-decoration-none title fs-4 fw-bolder text-dark">{{this.title}}</a>
                            <p class="card-duration text-muted"><small> Duration: {{this.duration}} | {{this.name}}</small></p>
                            
                            
                            <div>
                                <p class="card-content text-truncate"> {{this.description}}</p>
                            </div>  

                           
                            <div class="card-icon mt-5">
                                {{#if this.technologies.[0]}}<i class="fa-brands {{this.technologies.[0]}} fs-1"></i>{{/if}}
                                {{#if this.technologies.[1]}}<i class="fa-brands {{this.technologies.[1]}} fs-1 ms-3"></i>{{/if}}
                                {{#if this.technologies.[2]}}<i class="fa-brands {{this.technologies.[2]}} fs-1 ms-3"></i>{{/if}}
                                {{#if this.technologies.[3]}}<i class="fa-brands {{this.technologies.[3]}} fs-1 ms-3"></i>{{/if}}
                            </div>
                              
                            {{#if this.isLogin}}
                            <div class="card-dbtn d-flex mt-5">
                                <a href="/update/{{this.id}}" class="btn btn-dark edit rounded w-100 me-4">edit</a>
                                <a href="/delete/{{this.id}}" class="btn btn-dark delete rounded w-100 ">Delete</a>
                            </div>                       
                           {{/if}}

                        </div>
                    </div>
                </div>
                {{/each}}

               </div>
            </div> 
    </section>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
