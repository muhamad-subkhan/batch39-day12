                aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse px-3" id="navbarTogglerDemo01">
                <a href="/">
                    <img class="navbar-brand navLogo" src="public/assets/images/logo.png"></img>
                </a>
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="navbar-brand home fw-bolder mx-2 active" aria-current="page" href="/">Home</a>
                    </li>
                    {{#if isLogin}}
                    <li class="nav-item fw-normal ms-2">
                        <a class="navbar-brand addProject" aria-current="page" href="/add-project">Add Project</a>
                    </li>
                    {{/if}}
                </ul>
                {{#if isLogin}}
                <a class="btn d-flex" href="/">Hallo {{user.name}}</a>
                <a class="btn d-flex" href="/logout">Sign out</a>

                {{else}}
                <a class="btn d-flex" href="/register">register</a>
                <a class="btn d-flex" href="/login">Login</a>
                {{/if}}

                <a class="btn d-flex" href="/contact-me">
                    <button class="btn contactMe btn-dark px-4 py-1">Contact Me</button>
                </a>
            </div>
        </div>
    </nav>

